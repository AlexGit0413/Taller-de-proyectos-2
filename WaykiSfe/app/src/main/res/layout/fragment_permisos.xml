<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="24dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <TextView
        android:text="Permisos"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginBottom="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="Para mantenerte seguro"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#3B8C99"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="WaykiSafe necesita algunos permisos importantes. Básicamente, usamos tu ubicación para mostrarte zonas seguras y enviarte alertas en tiempo real. También necesitamos permisos de notificación para avisarte de cualquier situación que pueda afectar tu seguridad."
        android:textSize="16sp"
        android:textColor="#555555"
        android:textAlignment="center"
        android:lineSpacingExtra="4dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"/>

</LinearLayout>
