<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <!-- Contenedor principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_centerInParent="true"
        android:padding="32dp"
        android:background="@drawable/bg_login_card">

        <!-- Nombre de la app -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WaykiSafe"
            android:textSize="28sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"
            android:textColor="#000000"
            android:layout_marginBottom="16dp" />

        <!-- Icono central -->
        <!-- Ícono circular -->
        <FrameLayout
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/bg_circle_icon"
            android:foregroundGravity="center"
            android:gravity="center">

            <ImageView
                android:id="@+id/imgUserIcon"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/ic_person_outline"
                android:contentDescription="user icon"
                android:tint="#00B3A4"
                android:layout_gravity="center" />
        </FrameLayout>


        <!-- Campo de correo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_edittext_field"
            android:padding="10dp"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_email"
                android:tint="#000000"
                android:layout_marginEnd="8dp"
                android:layout_gravity="center_vertical" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Correo electrónico"
                android:background="@null"
                android:textColorHint="#9A9A9A"
                android:inputType="textEmailAddress"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Campo de contraseña -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_edittext_field"
            android:padding="10dp"
            android:layout_marginBottom="24dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_lock"
                android:tint="#000000"
                android:layout_marginEnd="8dp"
                android:layout_gravity="center_vertical" />

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Contraseña"
                android:background="@null"
                android:textColorHint="#9A9A9A"
                android:inputType="textPassword"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Botón Iniciar sesión -->
        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Iniciar sesión"
            android:textColor="#FFFFFF"
            android:background="@drawable/bg_btn_primary"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="10dp" />

        <!-- Botón Registrarse -->
        <Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrarse"
            android:textColor="#F36C66"
            android:background="@drawable/bg_btn_secondary"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="20dp" />

        <!-- Botón Google personalizado -->
        <LinearLayout
            android:id="@+id/btnGoogleCustom"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/bg_google_button"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:clickable="true"
            android:focusable="true"
            android:elevation="3dp"
            android:layout_marginTop="12dp">

            <ImageView
                android:id="@+id/googleIcon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_google_logo"
                android:contentDescription="Google logo"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/tvGoogleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Acceder con Google"
                android:textColor="#000000"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>


        <!-- ProgressBar -->
        <ProgressBar
            android:id="@+id/loading"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</RelativeLayout>
